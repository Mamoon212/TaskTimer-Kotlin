<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addedit_name" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:maxLength="64" android:inputType="textNoSuggestions"
            android:hint="@string/addedit_name_hint" android:layout_margin="8dp" android:importantForAutofill="no"
            tools:targetApi="o"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLength="256" android:id="@+id/addedit_description" android:layout_margin="8dp"
            android:inputType="textMultiLine" android:hint="@string/addedit_description_hint"
            android:importantForAutofill="no" tools:targetApi="o"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addedit_sortorder" android:layout_marginTop="8dp"
            android:inputType="number"
            android:maxLength="9" android:layout_margin="8dp" android:hint="@string/addedit_sort_hint"
            android:importantForAutofill="no" tools:targetApi="o"/>
    <Button
            android:text="@string/addedit_save_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addedit_save" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:layout_margin="8dp"
            android:drawableStart="@android:drawable/ic_menu_save"/>
</LinearLayout>