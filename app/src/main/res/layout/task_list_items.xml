<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tli_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="TaskTimer Application" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tli_edit"/>

    <TextView
            android:id="@+id/tli_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Write course notes and video for the TaskTimer application" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tli_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tli_edit"/>

    <ImageButton
            android:id="@+id/tli_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/edit_button_description"
            app:srcCompat="@android:drawable/ic_menu_edit"
            app:layout_constraintTop_toTopOf="@+id/tli_delete" app:layout_constraintEnd_toStartOf="@+id/tli_delete"
            android:layout_marginEnd="8dp"/>

    <ImageButton
            android:id="@+id/tli_delete"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:contentDescription="@string/delete_button_description"
            app:srcCompat="@android:drawable/ic_menu_delete"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>